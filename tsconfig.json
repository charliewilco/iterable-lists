{
	"compilerOptions": {
		"outDir": "dist",
		"module": "ESNext",
		"target": "esnext",
		"lib": ["es2017", "dom"],
		"sourceMap": true,
		"allowJs": false,
		"declaration": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"]
}
